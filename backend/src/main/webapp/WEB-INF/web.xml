<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>SendFCMExampleServlet</servlet-name>
        <servlet-class>eldmind.cz3002.ntu.backend.SendFCMExampleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddElderlyServlet</servlet-name>
        <servlet-class>eldmind.cz3002.ntu.backend.AddElderlyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SendFCMExampleServlet</servlet-name>
        <url-pattern>/sendAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddElderlyServlet</servlet-name>
        <url-pattern>/addElderly</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>eldmind.cz3002.ntu.backend.datastore.OfyHelper</listener-class>
    </listener>
</web-app>